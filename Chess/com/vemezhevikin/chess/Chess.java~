package com.vemezhevikin.chess;

import java.awt.EventQueue;
import javax.swing.JFrame;

/**
 * Realization of chess.
 * This realization allow making pieces moves one side after another
 * (including pawn promotion (to a queen), castling).
 * After each turn checking whether it was correct move (without leaving own king under attack),
 * it is check to opposite side's king, checkmate, stalemte position. 
 * 
 * @author Viktor Mezhevikin
 */
public class Chess
{
	public static void main(String[] args)
	{
		EventQueue.invokeLater(new Runnable()
		{
			public void run()
			{
				ChessFrame frame = new ChessFrame();
				frame.setTitle("Chess v2.1");
				frame.setResizable(false);
				frame.setBounds(350, 175, 575, 450);
				frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
				frame.setVisible(true);
			}
		});
	}
}
